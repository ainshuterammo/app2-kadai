
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
        </tr>
        <tr>
          <td>name：<%= user.name %></td>
        </tr>
    	  <tr> 
    	    <td>introduction：<%= user.introduction %></td>
        </tr>
      </table>
      <div class='row'>
      <%= link_to edit_user_path(current_user.id), class: "btn btn-danger", method: :edit do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      </div>
      
        <!--<a class="btn btn-outline-secondary btn-block edit_user_18681" -->
       
      

      <% if book.errors.any? %>
      <%= book.errors.count %>error prohibited this book from being saved:
      <ul>
        <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, url: 'books', method: :post do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
        <!--<input class="form-control book_title" type="text" name="book[title]" id="book_title" />-->
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion %>
        <!--<textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>-->
      </div>

      <div class="form-group">
        <%= f.submit 'Create Book' %>
        <!--<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />-->
      </div>
      <% end %>
    </div>



