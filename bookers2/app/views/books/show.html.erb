<main>
<% if flash[:notice] %>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
<% end %>

<div class='container'>
	<div class='row'>

			<%= render 'books/list', user: @user, book: @book %>

		<div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>

			<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</table>
			<tbody>
    	<% @books.each do |book| %>

    		<tr>
    		<td><%= link_to user_path(user.id), target: "_blank" do %>
  					<%= image_tag "search.png" %>
  					<%= user.name %>
						<% end %></td>


				<td><%= book.title %></td>
				<td><%= book.body %></td>
      	<td><%= link_to "Edit", edit_book_path(book.id) %></td>
      	<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    	</tr>







    		<tr>
    			<td><%= link_to "Show", user_path(user.id) %></td>
      		<td><%= book.title %></td>
					<td><%= book.body %></td>
   		    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   		    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
   		 </tr>
   		<% end %>
   		</tbody>
  		</table>
		</div>
	</div>
</div>
</main>