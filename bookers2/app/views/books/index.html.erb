
  <% if flash[:notice] %>
    <p id="notice">
     <%= flash[:notice] %>
    </p>
  <% end %>

<main>

<div class='container'>
	<div class='row'>

<%= render 'books/list', user: @user, book: @book %>


<div class='col-md-8 offset-md-1'>
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>

    <tr></tr>

      <td><%= link_to user_path(book.user_id) do %>
    			<strong><%= image_tag book.user.get_profile_image(100,100) %></strong>
  				<% end %></td>

      <td><%= link_to(book_path(book.id), class:"text-dark") do %>
        <strong><span> <%= book.title %></span></strong>
        <% end %></td>
			<td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
 </table>

  </div>
</div>
</main>


