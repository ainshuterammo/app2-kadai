<main>
<% if flash[:notice] %>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
<% end %>

<div class='container'>
	<div class='row'>

		<%= render 'books/list', user: @user, book: @book %>

		<div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
		<div class='row'>
			<table class="table table-hover table-inverse">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>

		</div>
		<div class='row'>
			<tbody>
    	<% @books.each do |user| %>

    		<tr>
    			<td><%= link_to show_user_path(user.id) do %>
    					<%= attachment_image_tag book, :image %>
  						<% end %></td>

      		<td><%= book.title %></td>
					<td><%= book.body %></td>
   		 </tr>

   	 <% end %>
   		</tbody>
  	 </table>
   	</div>
		</div>
	</div>
</div>
</main>

