<main>
<% if flash[:notice] %>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
<% end %>

<div class='container'>
	<div class='row'>

		<%= render 'books/list', user: @user, book: @book %>

		<div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
		<div class='row'>
			<table class="table table-hover table-inverse">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
				</thead>
				</div>
				<div class='row'>
				<tbody>
    			<% @books.each do |book| %>
    			<tr>
    				<td><%= link_to user_path(book.user.id), target: "_blank" do %>
  						<%= image_tag book.user.get_profile_image(100,100) %>
							<% end %></td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>

   	 			<% end %>
   			</tbody>
  	 	</table>
   	</div>
		</div>
	</div>
</div>
</main>

